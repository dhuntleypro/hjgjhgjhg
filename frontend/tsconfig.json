{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true, // probably already true
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitReturns": false,
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
